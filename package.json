{
  "name": "wdyt-server",
  "version": "1.0.0",
  "description": "Server for WDYT application",
  "main": "index.js",
  "author": "Vini Franco, Luan Tonin Galvan",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "tsc -p .",
    "prebuild": "rm -rf build/*",
    "compile": "yarn prebuild && yarn build",
    "dev": "ts-node-dev ./src/index.ts",
    "start": "NODE_ENV=production node ./build/index.js"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@types/body-parser": "^1.19.0",
    "@types/compression": "^1.7.0",
    "@types/express": "^4.17.6",
    "@types/helmet": "^0.0.47",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/mongoose": "^5.7.24",
    "@types/multer": "^1.4.3",
    "@typescript-eslint/eslint-plugin": "^3.2.0",
    "@typescript-eslint/parser": "^3.2.0",
    "commitizen": "^4.1.2",
    "cz-conventional-changelog": "3.2.0",
    "eslint": "^7.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "lint-staged": "^10.2.10",
    "prettier": "^2.0.5",
    "ts-node-dev": "^1.0.0-pre.47",
    "typescript": "^3.9.5"
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "./src/**/*.ts": [
      "eslint --fix"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@typegoose/typegoose": "^7.2.0",
    "argon2": "^0.26.2",
    "aws-sdk": "^2.696.0",
    "body-parser": "^1.19.0",
    "class-transformer": "^0.2.3",
    "class-validator": "^0.12.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-rate-limit": "^5.1.3",
    "helmet": "^3.23.0",
    "husky": "^4.2.5",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.9.18",
    "multer": "^1.4.2",
    "multer-sharp-s3": "^0.2.1",
    "rate-limit-mongo": "^2.2.0",
    "reflect-metadata": "^0.1.13",
    "routing-controllers": "^0.9.0-alpha.3",
    "sharp": "^0.25.4",
    "typedi": "^0.8.0"
  }
}
